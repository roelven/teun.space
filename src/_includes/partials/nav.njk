{% set navigation = collections.all | eleventyNavigation %}
<header class="top-nav">
    <div class="intro">
        <div class="logo">
            <img src="/images/teun-space-logo-200.jpg" alt="Teun.space" />
        </div>
        <div>
            <a class="home-button" href="/">Teun.space</a>
            <p class="home-about">{{ site.author.about }}</p>
        </div>
    </div>
    <nav class="nav-main">
        <ul class="nav-list">
            {% for link in navigation %}
            <li><a href="{{ link.url | url }}" class="link">{{ link.title }}</a></li>
            {% endfor %}
        </ul>
    </nav>
</header>